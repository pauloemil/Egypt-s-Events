<%- include('../partials/header') -%> <%- include('../partials/navbar') -%> <%-
include('../partials/pageHeader.ejs') -%>
<div class="container p-5" style="margin-bottom: 21%">
  <%if(errors){%> <% errors.forEach((error) => {%>
  <div class="alert alert-danger" role="alert"><p><%=error.msg%></p></div>
  <%})%> <%}%>
  <form action="/event/edit/<%=event._id%>" method="post">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        required
        value="<%=event.title%>"
        name="title"
        type="text"
        class="form-control"
        id="titleTxt"
        placeholder="Title"
      />
    </div>
    <div class="mb-3">
      <label for="shortDescription" class="form-label">Short Description</label>
      <textarea
        required
        name="shortDescription"
        class="form-control"
        placeholder="Short description"
        aria-label="With textarea"
      >
<%=event.shortDescription%></textarea
      >
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        required
        name="description"
        class="form-control"
        placeholder="Description"
        aria-label="With textarea"
      >
<%=event.description%></textarea
      >
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input
        required
        value="<%=event.location%>"
        name="location"
        type="text"
        class="form-control"
        id="locationTxt"
        placeholder="Location"
      />
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">Date</label>
      <input
        required
        type="date"
        value="<%=eventDate%>"
        name="date"
        id="dateTxt"
      />
    </div>
    <div class="d-flex">
      <div class="ms-auto">
        <button class="btn btn-primary">Submit</button>
        <button class="btn btn-secondary">Clear</button>
      </div>
    </div>
  </form>
</div>
<%- include('../partials/footer') -%>
